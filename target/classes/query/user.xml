<?xml version="1.0" encoding="euc-kr"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="u">


	<select id="selectAllUser" resultType="uBean">
		SELECT * FROM user
	</select>

	<select id="selectById" parameterType="int" resultType="uBean">
		SELECT * FROM user WHERE id=#{id}
	</select>

	<insert id="saveUser" parameterType="com.hong.hakwon.dto.UserSaveDto" >
		INSERT INTO /* student.reg_user */
			user
		(
			 userId
			, password
			, name
			, phoneNumber
			, city
			, county
			, district
			, email
		)
	
		VALUES(
			  #{userId}
			, #{password}
			, #{name}
			, #{phoneNumber}
			, #{city}
			, #{county}
			, #{district}
			, #{email}
		)
		
	</insert>



